	<!--*************************************************查询未处理订单******************************************** -->

	<sql id="queryWaitOrder">
		t1.id,
		t.time,
		t.user_id,
		t1.username,
		t1.address,
		t1.tel,
		t1.name,
		t.state,
		t.note
	</sql>

	<select id="queryWaitOrder" resultMap="BaseResultMap2"
		parameterType="java.lang.Integer">
		select
		<include refid="queryWaitOrder" />
		FROM t_order t
		INNER JOIN t_user t1
		ON t.user_id = t1.id
		INNER JOIN
		t_goods t2
		ON t.goods_id = t2.id
		where t.state = 1 order by t.id desc
		<!-- AND t1.id = #{id,jdbcType=INTEGER} -->
	</select>
