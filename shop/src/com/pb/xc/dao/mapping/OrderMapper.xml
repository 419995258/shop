	<select id="queryWaitOrderByName" resultMap="BaseResultMap2"
		parameterType="java.lang.String">
		select
		<include refid="queryWaitOrder" />
		FROM t_order t
		INNER JOIN t_user t1
		ON t.user_id = t1.id
		INNER JOIN
		t_goods t2
		ON t.goods_id = t2.id
		where t.state = 1
		AND t1.name LIKE
